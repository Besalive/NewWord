<UserControl x:Class="NewWord.LocalControls.CounterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewWord.LocalControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WrapPanel>
            <TextBox x:Name="TBValue" Width="100" Height="30">
            </TextBox>
            <StackPanel>
                <Button x:Name="UpButton" Click="UpClick" Height="15" Width="15"></Button>
                <Button x:Name="DownButton" Click="DownClick" Height="15" Width="15"></Button>
            </StackPanel>
        </WrapPanel>
    </Grid>
</UserControl>
